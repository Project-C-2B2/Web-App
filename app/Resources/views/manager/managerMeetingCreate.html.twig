{% extends 'baseContentManager.html.twig' %}

{% form_theme form 'form/materialize_form_theme.html.twig' %}

{% block content %}
            {{ form_start(form) }}
                <div class="form_row">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'white-text'}}) }}
                </div>
                <div class="form_row">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                <div class="form_row" style="height: 60px">
                    <div class="col s12">
                        {{ form_label(form.group) }}
                    </div>
                    <div class="col s12">
                        {{ form_widget(form.group) }}
                    </div>
                </div>
                <div class="form_row">
                    {{ form_label(form.location) }}
                    {{ form_widget(form.location, {'attr': {'class': 'white-text'}}) }}
                </div>
                <div class="form_row">
                    {{ form_label(form.dateTime) }}
                    {{ form_widget(form.dateTime, {'attr': {'class': 'white-text'}}) }}
                </div>
            {{ form_end(form) }}
{% endblock %}
{% extends 'baseContent.html.twig' %}

{% block content %}
    <h2>Evaluatie</h2>
    <table class="container white-text" >
        <tbody>
            <tr>
                <td>Aanwezigheid :</td>
                {% if feedback.attending == 1%}
                    <td style="color: #69F0AE;">Aanwezig</td>
                {% else%}
                    <td style="color: red;">Afwezig</td>
                {% endif %}
            </tr>
            <tr>
                <td>Beoordeling :</td>
                <td>{{ feedback.rating }} van de 10</td>
            </tr>
            <tr>
                <td style="width: 25%">Beschrijving van beoordeling :</td>
                <td>{{ feedback.feedback }}</td>
            </tr>
            <tr>
                <td>Gebruiker :</td>
                <td>{{ feedback.user.username }}</td>
            </tr>
            <tr>
                <td>Vergadering :</td>
                <td>{{ feedback.meeting.name }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
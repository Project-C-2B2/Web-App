{% extends 'baseContent.html.twig' %}

{% block nav %}
    <div class="nav-bar">
        <div class="nav-logo"><a href="{{ path('loginRedirect') }}" ><img src="{{ asset("images/logocs.png") }}" width="75" height="75" alt="logo"></a></div>
        <div class="nav-items">
            <ul>
                <li><a href="{{ path('manager-meeting-view') }}">Meetings</a></li>
            </ul>
            <a class="btn" href="{{ path('login') }}">account</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <h2 class="center white-text">List of: {{ user.username }} </h2>
    <table class="container white-text" >
        <thead>
        <tr>
            <td>ID</td>
            <td>User id</td>
            <td>Group name</td>
            <td>Group description</td>
            <td>Add to Group</td>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
            <td>{{ group.id }}</td>
            <td>{{ user.id }}</td>
            <td>{{ group.name }}</td>
            <td>{{ group.description }}</td>
            <td>
                <a class="btn green {% for groupass in groupAss %}{% if groupass.group == group %}disabled{% endif %}{% endfor %}" href="{{ path('manager-group-add', {userid: user.id, groupid: group.id}) }}">Add</a>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
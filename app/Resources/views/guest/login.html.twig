{% extends 'base.html.twig' %}

{% block body %}

    <nav>
        <div class="nav-wrapper">
            <img src="https://i.ibb.co/hmYS1rD/Logocimmeetsnocaps.png" class="logo-cim-Meets" ></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="{{ path('guestpage') }}" style="color: #646464; font-weight: bold;">Guestpage</a></li>
                <li><a href="{{ path('user_registration') }}" style="color: #646464; font-weight: bold;">Register</a></li>
            </ul>
        </div>
    </nav>

    <div class="row">
        <div class="col s12">
            <img class="cim-img" src="https://media.glassdoor.com/sqll/419019/cimsolutions-squarelogo-1562828823772.png">
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="login center-align "><p>Sign in</p></div>
        </div>
    </div>
    {% if error %}
        <div class="col s12 center-align" >{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        <div class=" center-align"><p>The manager needs to enable the account, please wait</p></div>
    {% endif %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice center-align">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col s3"></div>
        <form class="col s6" action="{{ path('login') }}" method="post">
            <div class="row">
                <div class="input-field col s12 m6">
                    <img style="padding-right: 10px" class="material-icons prefix" src="https://i.pinimg.com/originals/0c/3b/3a/0c3b3adb1a7530892e55ef36d3be6cb8.png"></img>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                    <label for="username">Username</label>
                </div>
                <div class="input-field col s12 m6">
                    <img style="padding-right: 10px; width: 43px; height:33px"class="material-icons prefix" src="https://cdn.onlinewebfonts.com/svg/img_398183.png"></img>
                    <input type="password" id="password" name="_password" />
                    <label for="password">Password</label>
                </div>
                <div class="col s12">
                    <button class="btn" type="submit">Sign In</button>
                </div>
            </div>

        </form>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        body{
            -webkit-text-fill-color: #646464;
            font-family: 'Roboto', sans-serif;
        }
        .cim-img {
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 5%;
            width:200px;
            height:200px;
        }
        .title{
            color: grey;
            margin-top: -2%;
            font-family: 'Roboto', sans-serif;
            font-size: 60px;
        }
        .login{
            color: grey;
            /*margin-top: 1%;*/
            font-family: 'Roboto', sans-serif;
            font-size: 60px;
        }
        .btn{
            background: rgba(108, 164, 57, 0.95);
            display: block;
            margin-left: auto;
            margin-right: auto;
            /*margin-top: 5%;*/
            width:100px;
            height:40px;
        }
        .nav-wrapper{
            background: rgb(195, 195, 195);
        }
        .logo-cim-Meets{
            margin-top: 0.4%;
            margin-left: 0.5%;
        }

    </style>
{% endblock %}
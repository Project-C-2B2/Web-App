{% extends 'baseUser.html.twig' %}

{% block content %}
<div class="textCreateAccount center-align white-text"><p>Account aanmaken</p></div>
{{form_start(form) }}
<div class="row white-text">
    <div class="col s3"></div>
    <div class="col s6">
        <div class="row">
            <div class="input-field col s12 m6">
                {{ form_row(form.username, {'attr': {'class': 'white-text'}}) }}
            </div>
            <div class="input-field col s12 m6 ">
                {{ form_row(form.email, {'attr': {'class': 'white-text'}}) }}
            </div>
            <div class="input-field col s12 m6 form_row" >
                {{ form_row(form.plainPassword.first, {'attr': {'class': 'white-text'}}) }}
            </div>
            <div class="input-field col s12 m6">
                {{ form_row(form.plainPassword.second, {'attr': {'class': 'white-text'}}) }}
            </div>
            <div class="input-field col s12" >
                {{ form_row(form.submit) }}
            </div>

        </div>
    </div>
</div>

        {{ form_end(form) }}
        {% if msg is not null %}
            <div class="input-field_aiu col s12 center-align white-text">
            {{ msg }}
            </div>
        {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        body{

            font-family: 'Roboto', sans-serif;
        }
        .textCreateAccount{
            font-size: 40px;
        }
        .btn{
            /*background: rgba(108, 164, 57, 0.95);*/
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .input-field_aiu{
            font-size: 25px;
        }
    </style>
{% endblock %}
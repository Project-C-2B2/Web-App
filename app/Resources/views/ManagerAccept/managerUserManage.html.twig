{% extends 'base.html.twig' %}


{% block body %}
    {{ dump(users) }}
    {% for message in app.flashes('succes') %}
        <div class="green" style="margin-left: 50px; margin-right: 50%" >
            {{ message }}
        </div>
    {% endfor %}
    <h2 class="">List of all users</h2>
    <table class="table table-striped" style="margin-left: 50px">
        <thead>
            <tr>
                <td>ID</td>
                <td>Username</td>
                <td>Email</td>
                <td>Enable/Disable</td>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.enabled == 1 %}
                            <a class="waves-effect waves-red btn" href="{{ path('manager-user-enable', {id: user.id}) }}">
                                Enabled
                            </a>
                        {% else %}
                            <a class="waves-effect waves-green btn red" href="{{ path('manager-user-enable', {id: user.id}) }}">
                                Disabled
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}


